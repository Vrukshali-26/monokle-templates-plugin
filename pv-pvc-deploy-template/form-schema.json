{
    "type": "object",
    "required": [
      "PV-name",
      "storage-capacity",
      "access-modes",
      "host-path",
      "PVC-name",
      "request-storage"
    ],
    "properties": {

      "PV-name": {
        "type": "string",
        "default": "my-PV"
      },

      "namespace": {
        "type": "string"
      },

      "storage-capacity": {
          "type": "number"
      },

      "access-modes":{
          "type":"string"
      },

      "host-path": {
          "type": "string"
      },

      "PVC-name": {
          "type": "string",
          "default": "my-PVC"
      },

      "request-storage": {
          "type":"number"
      }
    }
  }
